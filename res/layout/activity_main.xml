<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bmtsoft.net.serp.MainActivity" >
 <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignLeft="@+id/lbldatabase"
        android:layout_marginLeft="18dp" />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="34dp"
        android:orientation="vertical" >
    </LinearLayout>

    <EditText
        android:id="@+id/txtdatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ngangoc2020" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lbldatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtdatabase"
        android:layout_alignBottom="@+id/txtdatabase"
        android:layout_alignParentLeft="true"
        android:text="DataBase" />

    <EditText
        android:id="@+id/txtUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_toRightOf="@+id/linearLayout1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="huynhnv" />

    <EditText
        android:id="@+id/txtpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblcustid"
        android:layout_alignBottom="@+id/lblcustid"
        android:layout_alignRight="@+id/txtUserID"
        android:layout_toRightOf="@+id/linearLayout1"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnlamtuoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnlogin"
        android:layout_marginTop="34dp"
        android:text="Refresh"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lblUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtUserID"
        android:layout_alignBottom="@+id/txtUserID"
        android:layout_alignLeft="@+id/lbldatabase"
        android:text="User ID" />

    <TextView
        android:id="@+id/lblcustid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblUserID"
        android:layout_below="@+id/txtUserID"
        android:layout_marginTop="16dp"
        android:text="Password" />

    <Button
        android:id="@+id/btnexit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtpassword"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="46dp"
        android:layout_toRightOf="@+id/btnlogin"
        android:text="Exit" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnexit2"
        android:layout_alignBottom="@+id/btnexit2"
        android:layout_toRightOf="@+id/lblcustid"
        android:text="Login" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignLeft="@+id/lbldatabase" >
    </TableRow>

</RelativeLayout>